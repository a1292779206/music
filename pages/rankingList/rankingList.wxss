/* pages/rankingList/rankingList.wxss */
.rankinglist{
    width:30%;
    height:300px;
    float: left;
}

.show{
    display: block
}

.hide{
    display: none
}

.active{
  color:#d4237a;
}
.act{
  color:#ef96c2;
}
.rankinglist .item{
    min-height:400px;
    background: #69C3AA;
}
.rankinglist .item view{
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 14px;
    color:#fff;
}

.rankinglist .item view.con{
    background: #59A691;
    color: #fff;
}

.contentItem{
    width:70%;
    /* height: 300px; */
    background: #4f7bb6;
    float: left;
}

.contentItemTop{

    width: 70%;
    height: 16%;
    margin: 5% 10% 20% 15%;
    text-align: center;
}
.contentItemTop text{
    color: white;
}

.contentItemTop image{
    width: 100%;
    height: 100px;
    border-radius: 10px;
}

.contentItemBottom{
    padding-top:30px; 
    height: 100%;
    background: white;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.containt{
    padding-top:5px; 
}

.containt .num{
    width:20%;
    height:40px;
    font-size:12px;
    color:#666;
    text-align: center;
    line-height: 40px;
    float:left;
}

.containt .song{
    width:58%;
    height:40px;
    float:left;
}

.containt .song text:nth-child(1){
    font-size: 14px;
}
.containt .song text:nth-child(2){
    display: block;
    color: #999;
    font-size: 10px;
}

.containt .autoplay_icon{
    width: 20%;
    height: 40px;
    display: inline-block;
    line-height: 40px;
    position: relative;
}

.autoplay_icon image{
    width:20px;
    height:20px;
    position:absolute;
    top:10px;
    left:0px;
}

