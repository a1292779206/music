page {
    background: #0d1427;
}

.con {
    color: #d4237a;
    border-bottom: 2px solid #d4237a;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.active {
    color: #d4237a;
}

.act {
    color: #ef96c2;
}

.header {
    height: 200px;
    overflow: hidden;
    position: relative;
}

.portrait {
    filter: blur(5px);
}

.mask {
    width: 100%;
    height: 200px;
    background-color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.5;
}

.name {
    position: absolute;
    left: 135px;
    top: 120px;
}

button {
    position: absolute;
    top: 150px;
    left: 23%;
}

.portraitShow {
    width: 80px;
    height: 80px;
    position: absolute;
    top: 35px;
    left: 120px;
    border-radius: 50%;
}

.con {
    color: #d4237a;
    border-bottom: 2px solid #d4237a;
}

.myConcent {
    border-bottom: 1px solid #eee;
    color: #333;
}

.near {
    width: 50%;
    font-size: 14px;
    float: left;
}

.wrapper {
    width: 28px;
    margin: 0 auto;
    padding: 10px 0;
    color: white;
}

.containt {
    padding-top: 30px;
}

.containt .num {
    width: 18%;
    height: 40px;
    font-size: 12px;
    color: #666;
    text-align: center;
    line-height: 40px;
    float: left;
}

.containt .song {
    width: 58%;
    height: 40px;
    float: left;
}

.containt .song text:nth-child(1) {
    font-size: 14px;
    color: white;
}

.containt .song text:nth-child(2) {
    display: block;
    color: #999;
    font-size: 10px;
}

.containt .autoplay_icon {
    width: 20%;
    height: 40px;
    display: inline-block;
    line-height: 40px;
    position: relative;
}

.autoplay_icon image {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 10px;
    left: 0px;
}
