
.bgimg{
  width:100%;
  height:100%;
  position:absolute;
}
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#fff;
  opacity: 0.5;
}
.round{
  width:200px;
  height:200px;
  position:absolute;
  border-radius: 50%;
  border:2px solid #0d1427;
  top:8%;
  left:18%;
}
.play{
  background-color:#fff;
  width:50px;
  height:50px;
  position:absolute;
  bottom:3%;
  left:43%;
  border-radius:50%;
  opacity: .8;
  border:1px solid #ccc;
}
.play_left{
  background-color:black;
  width:25px;
  height:25px;
  position:absolute;
  bottom:5%;
  left:28%;
  border-radius:50%;
  opacity: .8;
  border:1px solid #ccc;
}
.play_right{
  background-color:black;
  width:25px;
  height:25px;
  position:absolute;
  bottom:5%;
  left:66%;
  border-radius:50%;
  opacity: .8;
  border:1px solid #ccc;
}
.hide{
  display:none;
}
.show{
  display:block;
}
.active{
    color: pink;
}
.word{
  width:100%;
  height:120px;
  position:absolute;
  font-size:14px;
  top:50%;
  overflow: hidden;

}
.word text{
  display:block;
  width:100%;
  color:#0d1427;
  text-align: center;
  line-height:30px;
  transition: 0.5s;
}
.word text.active{
  color:#d4237a;
}
.progress_box{
    position: absolute;
    top: 78%;
    width: 100%;
}
.progress_box .up text:nth-child(1){
    position: absolute;
    right: 1%;
    font-size: 12px;
}
.progress_box .up text:nth-child(2){
    position: absolute;
    left: 1%;
    font-size: 12px;
}
.progress_box .down{
    width: 76%;
    height: 2px;
    background: #db438e;
    position: absolute;
    left: 12%;
    margin-top:2%;
}
.progress_box .down .bar{
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #db438e;
    position: absolute;
    top:-9px;
}
.collect{
  border:1px solid #d4237a;
  border-radius:20px;
  font-size:14px;
  color:#d4237a;
  padding:5px 5px;
  position:absolute;
  bottom:4%;
  left:6%;
}
.collect image{
  display:block;
  width:20px;
  height:20px;
  float:left;
}
