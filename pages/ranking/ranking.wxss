/* pages/ranking/ranking.wxss */
.contentItem{
    width:100%;
    /* height: 300px; */
    background: #4f7bb6;
    float: left;
}

.contentItemTop{

    width: 100%;
    height: 16%;
    position: relative;
    margin: 5% 15% 20% 15%;
    text-align: center;
}
.contentItemTop text{
    color: white;
    position: absolute;
    top: 134%;
    left: 27%;
}

.contentItemTop image{
    width: 50%;
    height: 100px;
    border-radius: 10px;
    position: absolute;
    top: 0%;
    left: 11%;
}

.contentItemBottom{
    padding-top:30px; 
    height: 200%;
    background: white;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.containt{
    padding-top:5px; 
}

.containt .num{
    width:20%;
    height:40px;
    font-size:12px;
    color:#666;
    text-align: center;
    line-height: 40px;
    float:left;
}

.containt .song{
    width:58%;
    height:40px;
    float:left;
}

.containt .song text:nth-child(1){
    font-size: 14px;
}
.containt .song text:nth-child(2){
    display: block;
    color: #999;
    font-size: 10px;
}

.containt .autoplay_icon{
    width: 20%;
    height: 40px;
    display: inline-block;
    line-height: 40px;
    position: relative;
}

.autoplay_icon image{
    width:20px;
    height:20px;
    position:absolute;
    top:10px;
    left:0px;
}

.autoplay_icon text{
    color: red;
    font-size: 12px;
}